<body>
    <script>
        var nilai = prompt("Masukkan Usia")
        var grade = "";
        if (nilai <= 12 && nilai >= 0) {
            document.write("anak-anak");
        } else if (nilai < 17 && nilai >= 13) {
            document.write("remaja");
        } else if (nilai < 50 && nilai >= 18) {
            document.write("dewasa");
        } else if (nilai >= 65) {
            document.write("lansia");
        }
    </script>
</body>

</html>
